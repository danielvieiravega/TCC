<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TCC"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:DataVisualization="using:Telerik.UI.Xaml.Controls.DataVisualization"
    x:Class="TCC.MainPage"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource AppBarToggleButtonCheckedDisabledForegroundThemeBrush}">
        <Grid HorizontalAlignment="Left" Height="412" Margin="10,10,0,0" VerticalAlignment="Top" Width="748">


            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="44" Margin="75,229,0,0" VerticalAlignment="Top" Width="178">
                <TextBlock x:Name="TxtTempEngine"  TextWrapping="Wrap" Text="0 °C" Margin="78.8,18.8,58.8,8.8" FontFamily="digital display tfb" FontWeight="Bold" FontSize="14"/>
            </Border>
            <TextBlock x:Name="LblTempEngine" HorizontalAlignment="Left" Margin="96,229,0,0" TextWrapping="Wrap" Text="Temperatura do motor" VerticalAlignment="Top" FontSize="14"/>
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="44" Margin="75,291,0,0" VerticalAlignment="Top" Width="178">
                <TextBlock x:Name="TxtTempIntake"  TextWrapping="Wrap" Text="0 °C" Margin="80.8,16.8,56.8,8.8" FontFamily="digital display tfb" FontWeight="Bold" FontSize="14"/>
            </Border>
            <TextBlock x:Name="LblTempIntake" HorizontalAlignment="Left" Margin="100,291,0,0" TextWrapping="Wrap" Text="Temperatura do ar" VerticalAlignment="Top" FontSize="14"/>
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="44" Margin="75,348,0,0" VerticalAlignment="Top" Width="85">
                <TextBlock x:Name="TxtFuelPressure"  TextWrapping="Wrap" Text="0 kPa" Margin="11.8,16.8,6,8.8" FontFamily="digital display tfb" FontWeight="Bold" FontSize="14"/>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="44" Margin="168,348,0,0" VerticalAlignment="Top" Width="85">
                <TextBlock x:Name="TxtThrotlePosition"  TextWrapping="Wrap" Text="0 %" Margin="23.8,16.8,17,8.8" FontFamily="digital display tfb" FontWeight="Bold" FontSize="14"/>
            </Border>
            <TextBlock x:Name="LblPressure" HorizontalAlignment="Left" Margin="76,349,0,0" TextWrapping="Wrap" Text="Pressão Combustível" VerticalAlignment="Top" FontSize="9"/>
            <TextBlock x:Name="LblThrotlePosition" HorizontalAlignment="Left" Margin="173,349,0,0" TextWrapping="Wrap" Text="Posição acelerador" VerticalAlignment="Top" FontSize="9"/>
            <Button x:Name="BtnStart"  Content="Start" HorizontalAlignment="Left" Margin="531,301,0,0" VerticalAlignment="Top" Click="BtnStart_Click" Width="56"/>
            <Button x:Name="BtnClose"  Content="Close" HorizontalAlignment="Left" Margin="531,360,0,0" VerticalAlignment="Top" Click="BtnClose_Click"/>
            <TextBlock x:Name="TxtSms" HorizontalAlignment="Left" Margin="412,33,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="150" Width="298"/>
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="150" Margin="412,33,0,0" VerticalAlignment="Top" Width="298"/>
            <Button x:Name="BtnClearSms" Content="Limpar" HorizontalAlignment="Left" Margin="414,193,0,0" VerticalAlignment="Top" Click="BtnClearSms_Click"/>

            <DataVisualization:RadRadialGauge Name="GaugeSpeed" MinValue="0" MaxValue="200" LabelStep="20" Margin="-29,38,517,0" TickStep="10" DataVisualization:RadRadialGauge.MinAngle="-50" DataVisualization:RadRadialGauge.MaxAngle="250" VerticalAlignment="Top" LabelRadiusScale="1.10" Height="121">
                <DataVisualization:RadRadialGauge.LabelTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Margin="-1 0 0 0" FontSize="15" Foreground="#595959"></TextBlock>
                    </DataTemplate>
                </DataVisualization:RadRadialGauge.LabelTemplate>
                <DataVisualization:SegmentedRadialGaugeIndicator  StartValue="0" Value="200">
                    <DataVisualization:BarIndicatorSegment Thickness="2" Stroke="#595959" Length="100"/>
                    <DataVisualization:BarIndicatorSegment Thickness="2" Stroke="Red" Length="10" />
                </DataVisualization:SegmentedRadialGaugeIndicator>
                <DataVisualization:RadialBarGaugeIndicator Name="RadialBarGaugeSpeed" Value="0" Brush="Gray" Thickness="12" DataVisualization:RadRadialGauge.IndicatorRadiusScale="0.83"/>
                <DataVisualization:RadialBarGaugeIndicator Value="{Binding Expenses}" IsAnimated="True" Brush="Black" Thickness="12" DataVisualization:RadRadialGauge.IndicatorRadiusScale="0.83"/>
                <DataVisualization:MarkerGaugeIndicator Name="MarkerGaugeSpeed" Value="0" Content="*" FontFamily="Segoe UI" FontSize="17" Foreground="Red" DataVisualization:RadRadialGauge.IndicatorRadiusScale="0.83"/>
            </DataVisualization:RadRadialGauge>
            <TextBlock Name="TxtSpeed" Text="0 Km/h" FontSize="15" Margin="79,88,604,298" VerticalAlignment="Center" HorizontalAlignment="Center" Height="26" Width="65"/>

        </Grid>

    </Grid>
</Page>



